{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"moduleResolution": "node",
		"strict": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"strictBindCallApply": true,
		"declaration": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"sourceMap": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"esModuleInterop": true
	}
}